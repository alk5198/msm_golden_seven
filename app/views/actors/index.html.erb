<h1> Actors</h1>


<form action="http://localhost:3000/directors">
<button>Directors</button>
</form>
<form action="http://localhost:3000/movies">
<button>Movies </button>
</form>
<form action="http://localhost:3000/actors">
<button>Actors </button>
</form>

<form action="http://localhost:3000/new_actor">
<button>ADD A NEW ACTOR</button>
</form>


<table>
  <tr>
    <th  colspan="1">Image</th>
    <th  colspan="2">Dob </th>
      <th  colspan="1">Name </th>
        <th  colspan="6">Bio </th>
    <th colspan="3">Actions</th>
  </tr>
  <% @actor.each do |actor| %>
  <tr>
    <td colspan="1">
      <img src="<%= actor.image_url %>" width="80">
    </td>
    <td colspan="2">
      <%= actor.dob %>
    </td>
    <td colspan="1">
      <%= actor.name %>
    </td>
    <td colspan="6">
      <%= actor.bio %>
    </td>



    <td>
          <a href="/actors/<%=actor.id%>">Show</a>
        </td>
        <td>
              <a href="/actors/edit_actor/<%=actor.id%>">Edit</a>
            </td>
            <td>
                  <a href="/actors/<%=actor.id%>/delete_actor">Delete</a>
                </td>
  </tr>
  <% end %>
</table>
