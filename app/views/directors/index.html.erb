<h1> Directors</h1>


<form action="http://localhost:3000/directors">
<button>Directors</button>
</form>
<form action="http://localhost:3000/movies">
<button>Movies </button>
</form>
<form action="http://localhost:3000/actors">
<button>Actors </button>
</form>

<form action="http://localhost:3000/directors/new_form">
<button>ADD A NEW DIRECTOR</button>
</form>


<table>
  <tr>
    <th  colspan="1">Image</th>
    <th  colspan="2">Dob </th>
      <th  colspan="1">Name </th>
        <th  colspan="6">Bio </th>
    <th colspan="3">Actions</th>
  </tr>
  <% @director.each do |director| %>
  <tr>
    <td colspan="1">
      <img src="<%= director.image_url %>" width="80">
    </td>
    <td colspan="2">
      <%= director.dob %>
    </td>
    <td colspan="1">
      <%= director.name %>
    </td>
    <td colspan="6">
      <%= director.bio %>
    </td>



    <td>
          <a href="http://localhost:3000/directors/<%= director.id %>">Show</a>
        </td>
        <td>
              <a href="http://localhost:3000/directors/<%= director.id %>/edit_director">Edit</a>
            </td>
            <td>
                  <a href="/delete_director/<%= director.id %>">Delete</a>
                </td>
  </tr>
  <% end %>
</table>
