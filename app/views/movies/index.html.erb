<h1>  MOVIES </h1>

<form action="http://localhost:3000/directors">
<button>Directors</button>
</form>
<form action="http://localhost:3000/movies">
<button>Movies </button>
</form>
<form action="http://localhost:3000/actors">
<button>Actors </button>
</form>



<form action="http://localhost:3000/movies/new_form">
<button>Add a New Movie </button>
</form>

<table>
  <tr>
    <th  colspan="1">Image</th>
    <th  colspan="2">Title </th>
      <th  colspan="1">Year </th>
        <th  colspan="6">Duration </th>
          <th  colspan="1">Description </th>
            <th  colspan="1">Director ID </th>
    <th colspan="3">Actions</th>
  </tr>
  <% @list_of_movies.each do |movie| %>
  <tr>
    <td colspan="1">
      <img src="<%= movie.image_url %>" width="80">
    </td>
    <td colspan="2">
      <%= movie.title %>
    </td>
    <td colspan="1">
      <%= movie.year %>
    </td>
    <td colspan="6">
      <%= movie.duration %>
    </td>
    <td colspan="1">
      <%= movie.description %>
    </td>

    <td colspan="1">

      Placeholder
    </td>
    <td>
          <a href="http://localhost:3000/movies/<%= movie.id %>">Show</a>
        </td>
        <td>
              <a href="http://localhost:3000/movies/<%= movie.id %>/edit">Edit</a>
            </td>
            <td>
                  <a href="http://localhost:3000/delete_movie/<%= movie.id %>">Delete</a>
                </td>
  </tr>
  <% end %>
</table>
